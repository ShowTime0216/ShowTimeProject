<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="top"
        android:background="@color/white_db" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/tab_home_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_home_img"
                android:layout_width="27dp"
                android:layout_height="27dp" />

            <TextView
                android:id="@+id/tab_home_tv"
                style="@style/textSize13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="首页"
                android:textColor="@color/black_70" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_menu_img"
                android:layout_width="27dp"
                android:layout_height="27dp" />

            <TextView
                android:id="@+id/tab_menu_tv"
                style="@style/textSize13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="菜单"
                android:textColor="@color/black_70" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_message_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_message_img"
                android:layout_width="27dp"
                android:layout_height="27dp" />

            <TextView
                android:id="@+id/tab_message_tv"
                style="@style/textSize13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="消息"
                android:textColor="@color/black_70" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_task_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_task_img"
                android:layout_width="27dp"
                android:layout_height="27dp" />

            <TextView
                android:id="@+id/tab_task_tv"
                style="@style/textSize13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="任务"
                android:textColor="@color/black_70" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_mine_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_mine_img"
                android:layout_width="27dp"
                android:layout_height="27dp" />

            <TextView
                android:id="@+id/tab_mine_tv"
                style="@style/textSize13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="我"
                android:textColor="@color/black_70" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
